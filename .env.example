# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name

# Sleeper Sync Configuration
USE_SLEEPER_SYNC=false
APP_BASE_URL=http://127.0.0.1:5000

# External API Keys
FANTASYPROS_API_KEY=your_fantasypros_api_key_here
MSF_USERNAME=your_mysportsfeeds_username
MSF_PASSWORD=your_mysportsfeeds_password
SPORTSDATA_API_KEY=your_sportsdata_api_key_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Application Configuration
NODE_ENV=development
PORT=5000

# Vite client flags (must use VITE_ prefix)
VITE_REDRAFT_READY=true

# Test Configuration (for CI)
SLEEPER_USERNAME=your_sleeper_username_for_testing
SLEEPER_USER_ID=your_sleeper_user_id_for_testing
SLEEPER_LEAGUE_ID=your_sleeper_league_id_for_testing