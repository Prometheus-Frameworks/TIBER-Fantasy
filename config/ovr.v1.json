  "confidence_parameters": {
    "fusion": {
      "full_data_threshold": 0.8,
      "rookie_cap_penalty": 0.2,
      "market_cap_penalty": 0.1
    },
    "ratings_engine": {
      "full_data_threshold": 0.9,
      "component_weight": 0.2
    },
    "compass": {
      "full_data_threshold": 0.7,
      "dynasty_redraft_split": 0.1
    },
    "oasis_environment": {
      "freshness_hours": 24,
      "fresh_confidence": 1.0,
      "stale_confidence": 0.8,
      "min_metrics_count": 3
    }
  },

  "madden_curve": {
    "description": "Non-linear mapping to avoid 50-70 clustering",
    "formula": "OVR = round(1 + 98 * (0.75 * P + 0.25 * (3*P^2 - 2*P^3)))",
    "target_distribution": {
      "elite_threshold": 90,
      "star_threshold": 80,
      "starter_threshold": 70,
      "backup_threshold": 60,
      "median_target": 72
    }
  },

  "proven_elite_floors": {
